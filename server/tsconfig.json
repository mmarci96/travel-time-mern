{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS", // Use CommonJS for Node.js compatibility
    "moduleResolution": "node", // Node.js module resolution strategy
    "esModuleInterop": true, // Allow default imports from modules without default exports
    "skipLibCheck": true, // Skip library checks for performance
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Output directory for compiled files
    "strict": true // Enable strict type checking
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
